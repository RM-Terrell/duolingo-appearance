{
  "name": "Duolingo Appearance",
  "version": "1.0",
  "description": "Change the colors on Duolingo to get the look you want.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/duolingo-symbol-icon16.png",
      "32": "images/duolingo-symbol-icon32.png",
      "48": "images/duolingo-symbol-icon48.png",
      "128": "images/duolingo-symbol-icon128.png"
    }
  },
  "icons": {
    "16": "images/duolingo-symbol-icon16.png",
    "32": "images/duolingo-symbol-icon32.png",
    "48": "images/duolingo-symbol-icon48.png",
    "128": "images/duolingo-symbol-icon128.png"
  },
  "manifest_version": 2
}